publisher = {Elsevier B.V.},
title = {{Multifaceted fused-CNN based scoring of breast cancer whole-slide histopathology images}},
url = {https://doi.org/10.1016/j.asoc.2020.106808},
volume = {97},
year = {2020}
}

@book{Zainudin2020,
