doi = {10.1117/12.2043872},
file = {:home/palmeida/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Cruz-Roa et al. - 2014 - Automatic detection of invasive ductal carcinoma in whole slide images with convolutional neural networks.pdf:pdf},
isbn = {9780819498342},
issn = {16057422},
mendeley-groups = {Deep Learning Class/Interesting,Deep Learning Class/Cited},
month = {mar},
pages = {904103},
publisher = {SPIE},
title = {{Automatic detection of invasive ductal carcinoma in whole slide images with convolutional neural networks}},
